@model TripModelView

@{

}



<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddTrip" method="POST">
    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input type="text" class="form-control" asp-for="Destination" />
    </div>
    <div class="form-group">
        <label asp-for="Accommodation">Accommodation</label>
        <input type="text" class="form-control" asp-for="Accommodation" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input type="date" class="form-control" asp-for="StartDate" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input type="date" class="form-control" asp-for="EndDate" />
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">Cancel</a>

</form>